{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "extends": [
        "next",
        "next/core-web-vitals",
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.js", "*.jsx"],
      "plugins": ["import"]
    },
    {
      "extends": [
        "next",
        "next/core-web-vitals",
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint", "import"]
    }
  ]
}
